<!DOCTYPE html>
<html ng-app="TfSteno" id="ng-app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                @Html.ActionLink("Team Foundation Stenographer", "Landing", "Signup", null, new { @class = "brand" })
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2013 &ndash; <a href="http://www.aidanjryan.com">Aidan Ryan</a> | Fork on <a href="http://github.com/ajryan/TFSteno">GitHub</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/app")
</body>
</html>
